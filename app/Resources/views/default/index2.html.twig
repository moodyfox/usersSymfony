    <li><a href="{{ path('app_user_delete') }}">Borrar usuarios</a></li>#}
</ul>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Creado</th>
            <th>Actualizado</th>
            <th>Modificar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.createdAt|date('d/m/Y') }}</td>
            <td>{{ user.updatedAt|date('d/m/Y') }}</td>
            <td><a href="{{ path('app_user_modify', { 'id': user.id}) }}">Modifica</a></td>
            <td><a href="{{ path('app_user_doDelete', { 'id': user.id}) }}">Elimina</a></td> 
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
